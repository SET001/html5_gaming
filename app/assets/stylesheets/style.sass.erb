$cell-width: 60px
$height-width: 60px

$cells: 10
$rows: 10

canvas
  position: absolute
  top: 0
  left: 0
body
  overflow: hidden

#container
  width: 500px
  height: 500px
  overflow: hidden
  position: relative
  margin: 0 auto
  cursor: pointer
  game
    background: url(<%=image_path('bg_dirt.jpg')%>)
    width: 100%
    height: 100%
    overflow: hidden
    position: absolute
    top: 0
    left: 0
    border: 1px solid #000

.btn
  &.add_stone
    background: url(<%=image_path('stone.png')%>) no-repeat 
    width: 50px
    height: 50px
  &.add_unit
    background: url(<%=image_path('astronaut.png')%>) no-repeat
    width: 50px
    height: 50px
    